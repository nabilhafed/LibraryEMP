@{
    ViewData["Title"] = "gestion des adherents";
}
<link rel="stylesheet" href="~/css/gestion_des_adherents.css" />
<div class=" row w-100 h-100 p-2">

    <div class="col ms-4 d-flex flex-column justify-content-between">
        <div>
            <div class="row position-relative shadow-sm border rounded my-3 p-3 ">
                <div class="d-flex flex-row justify-content-around align-items-center">
                    <h5 class="border-title">Search By ID</h5>
                    <img class="w-80p" src="~/img/user_search.png" alt="">

                    <div class="input-group w-75">
                        <span class="input-group-text w-100p">ID:</span>
                        <input type="text" class="form-control" placeholder="ID" aria-label="Username">
                        <button class="btn btn-primary" type="button">Search</button>
                    </div>

                </div>
            </div>

            <div class="row position-relative shadow-sm border rounded my-3 p-3 ">
                <div class="d-flex flex-row justify-content-around align-items-center">
                    <h5 class="border-title">Search By Name - Prename</h5>
                    <img class="w-80p" src="~/img/user_search.png" alt="">

                    <div class="d-flex flex-column justify-content-around w-75">
                        <div class="input-group">
                            <span class="input-group-text w-100p">Name:</span>
                            <input type="text" class="form-control" placeholder="Name" aria-label="Username">
                        </div>

                        <div class="input-group mb-2">
                            <span class="input-group-text w-100p">Prename:</span>
                            <input type="text" class="form-control" placeholder="Prename" aria-label="Username">
                        </div>

                        <button class="btn btn-primary" type="button">Search</button>
                    </div>
                </div>
            </div>
        </div>


        <div>
            <div class="row position-relative shadow-sm border rounded my-3 p-3 ">
                <div class="d-flex flex-row justify-content-around align-items-center">
                    <h5 class="border-title">Add new User</h5>
                    <img class="w-80p" src="~/img/add_user.png" alt="">

                    <button class="btn btn-primary w-75" type="button">Create</button>
                </div>
            </div>
        </div>


    </div>

    <div class="col position-relative shadow-sm border rounded m-3 d-flex flex-column align-items-center justify-content-around">
        <h5 class="border-title">Details</h5>
        <div>
            <img src="~/img/user.png" alt="">
        </div>
        <span class="position-absolute top-0 start-100 translate-middle p-2  bg-warning border border-light rounded-circle">
            <span class="visually-hidden">New alerts</span>
        </span>
        <div>
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">UserID</span>
                <input type="text" class="form-control" placeholder="Username" aria-label="Username"
                       aria-describedby="basic-addon1">
            </div>
            <div class="row">
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text">Name</span>
                        <input type="text" class="form-control" placeholder="Username">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group mb-3">
                        <span class="input-group-text">prename</span>
                        <input type="text" class="form-control" placeholder="prename">
                    </div>
                </div>
            </div>

            <div class="d-flex flex-row ">
                <div>
                    <div class="input-group mt-3">
                        <label class="input-group-text w-120p" for="inputGroupSelect01">position</label>
                        <select class="form-select" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <input type="text" class="form-control" placeholder="Value" readonly>
                    </div>

                    <div class="input-group mt-3">
                        <label class="input-group-text w-120p" for="inputGroupSelect01">Catégorie</label>
                        <select class="form-select" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <input type="text" class="form-control" placeholder="Value" readonly>
                    </div>

                    <div class="input-group mt-3">
                        <label class="input-group-text w-120p" for="inputGroupSelect01">etat adhérent</label>
                        <select class="form-select" id="inputGroupSelect01">
                            <option selected>Choose...</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <input type="text" class="form-control" placeholder="Value" readonly>
                    </div>
                </div>

                <div class="d-flex flex-column-reverse align-items-center w-50">
                    <button class="btn btn-primary w-75 mt-3" type="button" disabled>Save Changes</button>
                    <button class="btn btn-danger w-75 " type="button" disabled>Delete</button>
                </div>
            </div>
        </div>



    </div>

</div>