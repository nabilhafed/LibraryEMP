@{
    ViewData["Title"] = "gestion des adherents";
    var currentController = "GDAController";
}
<link rel="stylesheet" href="~/css/gestion_des_adherents.css"/>
<link rel="stylesheet" href="~/lib/bootstrap-table/dist/bootstrap-table.min.css" />


<div class=" px-4 w-100 h-100">
    <div id="fixed-table-toolbar" class="btn-group">
        <div class="float-left search m-0">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAdherentModal">
                <i class="fa-solid fa-user-plus me-2"></i>
                Ajouter Adherent
            </button>
        </div>
    </div>
    @* data-side-pagination="server" *@
    <table id="adherentTable"
           data-locale="fr-FR"
           data-toggle="table"
           data-pagination="true"
           data-toolbar="#fixed-table-toolbar"
           data-url="@Url.Action("getAdherents", currentController)"
           data-page-size="11"
           data-pagination-parts="['pageInfo', 'pageList']"
           data-loading-template="loadingTemplate"

           data-search="true">


        <thead>
            <tr>
                <th data-field="idAdherent"     data-sortable="true" data-width="10" data-width-unit="%">ID</th>
                <th data-field="nom"            data-sortable="true" data-width="25" data-width-unit="%">Nom</th>
                <th data-field="prenom"         data-sortable="true" data-width="25" data-width-unit="%">Prenom</th>
                <th data-field="idPosition"     data-sortable="true" data-width="10" data-width-unit="%">Position</th>
                <th data-field="idCategorie"    data-sortable="true" data-width="10" data-width-unit="%">Categorie</th>
                <th data-field="etatAdherent"   data-sortable="true" data-width="10" data-width-unit="%">Etat</th>
                <th data-width="10" data-width-unit="%" data-formatter="operateFormatter" data-events="operateEvents">Operation</th>
            </tr>
        </thead>
    </table>


</div>


<div class="modal fade" id="addAdherentModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa-solid fa-user-plus me-2"></i>Adherent Creation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col rounded m-3 d-flex flex-column align-items-center justify-content-around">
                    <div class="w-100 d-flex justify-content-center">
                        <div class="d-flex justify-content-center">
                            <img class="w-75" src="~/img/user.png" alt="">
                        </div>
                    </div>
                    <div>
                        <div class="input-group my-3">
                            <span class="input-group-text w-120p" id="basic-addon1">UserID</span>
                            <input type="text" class="form-control" placeholder="Username" aria-label="Username">
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="input-group mb-3">
                                    <span class="input-group-text w-100p">Name</span>
                                    <input type="text" class="form-control" disabled placeholder="Username">
                                    <span class="input-group-text w-100p">prename</span>
                                    <input type="text" class="form-control" disabled placeholder="prename">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col w-50">
                                <div class="input-group mt-3">
                                    <label class="input-group-text w-100p" for="inputGroupSelect01">position</label>
                                    <select class="form-select" disabled id="inputGroupSelect01">
                                        <option selected></option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>

                                    <label class="input-group-text w-100p" for="inputGroupSelect01">Catégorie</label>
                                    <select class="form-select" disabled id="inputGroupSelect01">
                                        <option selected></option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>

                                <div class="input-group mt-3">
                                    <label class="input-group-text w-120p" for="inputGroupSelect01">etat adhérent</label>
                                    <select class="form-select" disabled id="inputGroupSelect01">
                                        <option selected></option>
                                        <option value="1">One</option>
                                        <option value="2">Two</option>
                                        <option value="3">Three</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer ">
                <div class="col d-flex flex-row justify-content-end">
                    <button class="btn btn-primary" type="button" disabled>Create</button>
                </div>
            </div>
        </div>
    </div>
</div>


